{
  "name": "auth-server",
  "version": "0.0.1",
  "description": "krgeobuk 관련 서비스 통합 인증서버",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "lint": "eslint src/**/*.{ts,js} --format=stylish",
    "lint-fix": "eslint src/**/*.{ts,js} --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build": "tsc && tsc-alias",
    "build:watch": "npx tsc --watch",
    "clean": "tsc -b --clean && rm -rf dist && rm -rf node_modules && rm -rf package-lock.json",
    "start": "node dist/main.js",
    "start:debug": "nodemon",
    "start:dev": "node ./dist/main.js",
    "start:prod": "node ./dist/main.js",
    "docker:local:up": "docker-compose up",
    "docker:dev:up": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
    "docker:prod:up": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "docker:local:down": "docker-compose down",
    "docker:dev:down": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "docker:prod:down": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml down",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@krgeobuk/auth": "^1.0.0",
    "@krgeobuk/core": "^1.0.0",
    "@krgeobuk/database-config": "^1.0.0",
    "@krgeobuk/jwt": "^1.0.0",
    "@krgeobuk/oauth": "^1.0.0",
    "@krgeobuk/shared": "^1.0.0",
    "@krgeobuk/swagger": "^1.0.0",
    "@krgeobuk/user": "^1.0.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^10.4.8",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "crypto": "^1.0.1",
    "ioredis": "^5.5.0",
    "joi": "^17.13.1",
    "mysql2": "^3.9.7",
    "nest-winston": "^1.10.2",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@krgeobuk/eslint-config": "^1.0.0",
    "@krgeobuk/tsconfig": "^1.0.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.3",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.2.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.32.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
